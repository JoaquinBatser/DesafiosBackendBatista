<div class='form-container'>
  <form id='add' class='product-form'>
    <h3>Add Product</h3>
    <div class='form-group'>
      <label for='title'>Title</label>
      <input type='text' name='title' id='title' class='form-control' />
    </div>
    <div class='form-group'>
      <label for='description'>Description</label>
      <input type='text' name='description' id='description' class='form-control' />
    </div>
    <div class='form-group'>
      <label for='price'>Price</label>
      <input type='number' name='price' id='price' class='form-control' />
    </div>
    <div class='form-group'>
      <label for='thumbnail'>Thumbnail</label>
      <input type='text' name='thumbnail' id='thumbnail' class='form-control' />
    </div>
    <div class='form-group'>
      <label for='code'>Code</label>
      <input type='text' name='code' id='code' class='form-control' />
    </div>
    <div class='form-group'>
      <label for='stock'>Stock</label>
      <input type='number' name='stock' id='stock' class='form-control' />
    </div>
    <div class='form-group'>
      <label for='category'>Category</label>
      <input type='text' name='category' id='category' class='form-control' />
    </div>
    <button id='addProductBtn' class='btn-submit'>Add</button>
  </form>
  <form id='delete'>
    <h3>Delete Product</h3>
    <div class='form-group'>
      <label for='code'>Id</label>
      <input type='text' name='id' id='id' class='form-control' />
    </div>
    <button id='deleteProductBtn' class='btn-submit'>Delete</button>
  </form>
</div>

<div class='products-container'>
  {{#each products}}
    <div class='product-card'>
      <p>{{this.id}}</p>
      <div class='product-card-image'><img src={{this.thumbnail}} alt={{this.title}} /></div>
      <div class='product-card-content'>
        <div>
          <h3>{{this.title}}</h3>
          <p>{{this.category}}</p>
          <p>{{this.description}}</p>
          <p>${{this.price}}</p>
          <p>{{this.stock}}</p>
          <p>{{this.code}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>